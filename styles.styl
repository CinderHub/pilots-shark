@import "nib"
@import "variables"

body
  width 100%
  height 100%
  user-select none

.sidebar
  position fixed
  top 0
  bottom 0
  width 170px
  //background midnight()
  //color white()
  color midnight()
  overflow-y scroll
  overflow-x hidden
  &.right
    right 0
    border-left 1px solid offWhite()
  &.left
    left 0
    border-right 1px solid offWhite()
  .create
    size(170,170)
    //background gray()
    border-bottom 1px solid offWhite()
  .title
    padding-left 10px
    padding-right 10px
    futura()
    color offGray()
    font-size 10px
    text-align left
  .logo
    margin-bottom 10px
    padding 0 10px 0 50px
    height 50px
    line-height 50px
    display block
    futura()
    font-size 18px
    text-align left
    .icon
      size(30,30)
      border-radius 30px
      position absolute
      top 10px
      left 10px
      //background white()
      background midnight()
  .list
    margin-bottom 20px
    .item
      .link
        padding-left 34px
        padding-right 10px
        position relative
        font-size 14px
        height 30px
        line-height 30px
        display block
        &:hover
          background gray()
        .icon
          position absolute
          top 7px
          left 10px
          size(16,16)
          //background white()
          background midnight()
          border-radius 16px
.content
  position absolute
  top 0
  right 170px
  bottom 0
  left 170px
  overflow-y auto
  overflow-x hidden
  //margin-right 170px
  //margin-left 170px
  //height 10000px
.toggle
  size(16,16)
  border-radius 16px
  position absolute
  top 17px
  background midnight()
  cursor pointer
  &.left
    left 10px
  &.right
    right 10px
.title
  //text-align center
  padding 0 40px 0 40px
  line-height 50px
  futura()
  font-size 24px
  color offGray()
.tiles
  width 940px
  height 2000px
  margin 0 auto
  padding-right 5px
  padding-left 5px
.tile
  width 300px
  height 210px
  float left
  margin-top 10px
  margin-right 5px
  margin-left 5px
  cursor pointer
  .preview
    width 300px
    height 169px
    background midnight()
    border-radius 4px
  .title
    font-size 14px
    padding 0
    line-height 20px
    text-align left
  .subtitle
    font-size 12px
    futura()
    text-align left
    line-height 14px
    color offerGray()

